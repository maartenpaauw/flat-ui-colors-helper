{
  "name": "flat-ui-colors-helpers",
  "version": "0.0.1",
  "description": "CSS helpers for Flat UI Colors",
  "author": "Maarten Paauw <maartenpaauw@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "commitmsg": "commitlint -e",
    "precommit": "lint-staged",
    "test": "mocha ./tests/unit/runner.js",
    "compile": "scss src/flatuicolors.scss:flatuicolors.css --style expanded",
    "compile-compressed": "scss src/flatuicolors.scss:flatuicolors.min.css --style compressed",
    "build": "npm run compile && npm run compile-compressed"
  },
  "devDependencies": {
    "@commitlint/cli": "3.1.3",
    "@commitlint/config-angular": "3.1.1",
    "husky": "0.14.3",
    "lint-staged": "4.0.4",
    "mocha": "3.5.0",
    "sass-true": "3.0.0-beta.1",
    "stylelint": "8.0.0",
    "stylelint-config-standard": "17.0.0",
    "stylelint-scss": "2.0.1"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --syntax scss"
    ]
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": null
    }
  }
}
